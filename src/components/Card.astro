---
interface Props {
    title: string;
    description?: string;
    tags?: string[];
    slug?: string;
}

const { title, description, tags, slug } = Astro.props;
---

<a href={slug} class="group">
    <div
        class="flex flex-col gap-12 p-4 border-2 transition duration-150 ease-out group-hover:bg-white md:max-w-[300px] md:aspect-square group-hover:shadow-[5px_5px_0_0_rgba(0,0,0,1)] group-hover:-translate-[2.5px]"
    >
        <div class="flex flex-col gap-1">
            <h3 class="text-lg font-semibold">{title}</h3>
            <p class="line-clamp-5">{description}</p>
        </div>
        <div class="flex flex-wrap gap-1 mt-auto w-full">
            {
                tags?.map((tag) => (
                    <span class="py-1 px-2 text-xs bg-black rounded-full group-hover:text-white text-primary">
                        {tag}
                    </span>
                ))
            }
        </div>
    </div>
</a>
